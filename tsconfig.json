{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false, // Consider enabling strict mode for better type safety
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "preserve",
    // Remove outDir and rootDir since noEmit is true and CRA manages the build output
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "lodash",
      "mapbox-gl",
      "uuid"
    ]
  },
  
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/setupProxy.js",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
